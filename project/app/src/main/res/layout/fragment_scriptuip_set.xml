<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/rl_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_marginTop="@dimen/distance_5"
        android:layout_marginRight="@dimen/distance_10"
        android:layout_marginBottom="@dimen/distance_5"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_option_start"
            android:background="@color/blue1"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"
            android:text="@string/optionfragment_start"
            style="@style/button"/>
        <Button
            android:id="@+id/btn_option_getmoretime"
            android:background="@drawable/bg_orange_box"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"
            android:text="@string/optionfragment_getmoretime"
            android:layout_below="@+id/btn_option_start"
            style="@style/button"/>
        <TextView
            android:textSize="@dimen/text_sp14"
            android:textColor="@color/blue4"
            android:gravity="center"
            android:id="@+id/tv_option_duetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_option_getmoretime"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/uip_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/rl_bottom_btn">
        <ScrollView
            android:id="@+id/scrollview_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/reyt_qui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_qui"/>
                <TextView
                    android:textSize="@dimen/text_sp26"
                    android:textColor="@color/gray_text"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/optionfragment_quitip"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:id="@+id/rl_bottom_content_ad"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_210"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/id_img_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tv_delete_ad"
            android:background="@drawable/img_ad_delete"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="@dimen/distance_120"
            android:layout_height="@dimen/distance_35"
            android:layout_marginTop="@dimen/distance_10"
            android:layout_marginRight="@dimen/distance_10"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_ilfyad_mark"
            android:background="@drawable/bg_ad_source_mark"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/distance_8"
            android:layout_marginBottom="@dimen/distance_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layoutDisplay"
    android:background="@drawable/ui_show_homepage_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/ui_show_primary_background"
        android:gravity="center"
        android:id="@+id/title"
        android:background="@drawable/ui_show_title_blue"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_user"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/ui_show_grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="14sp"
                android:textColor="@color/ui_show_primary_text_color"
                android:id="@+id/exit"
                android:background="@drawable/bg_exit_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginRight="-1dp"
                android:text="@string/ui_show_negative_button_label"
                android:layout_weight="1"/>
            <Button
                android:textSize="14sp"
                android:textColor="@color/ui_show_primary_text_color"
                android:id="@+id/next"
                android:background="@drawable/bg_continue_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/ui_show_positive_button_label"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

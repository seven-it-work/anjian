<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.cyjh.elfin.p085ui.view.customview.TitleView
        android:id="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <FrameLayout
        android:id="@+id/id_fl_register_code"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_marginTop="@dimen/distance_18"
        android:layout_marginRight="@dimen/distance_10">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_40">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/blank7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registration_number"/>
            <EditText
                android:textSize="12sp"
                android:textColor="@color/blank9"
                android:gravity="center_vertical"
                android:id="@+id/register_number"
                android:background="@null"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/input_register_number"
                android:singleLine="true">
                <requestFocus/>
            </EditText>
        </LinearLayout>
        <Button
            android:textSize="16sp"
            android:id="@+id/btn_activation"
            android:background="@drawable/bg_orange_box"
            android:layout_height="@dimen/distance_45"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="@dimen/distance_16"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="@dimen/distance_16"
            android:text="@string/activation_registration"
            style="@style/button"/>
        <Button
            android:textSize="16sp"
            android:id="@+id/btn_sweep_activation"
            android:background="@drawable/bg_blue_box"
            android:visibility="visible"
            android:layout_height="@dimen/distance_45"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="@dimen/distance_16"
            android:text="@string/sweep_code_activation"
            style="@style/button"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/blank9"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reg_code_tips"
            android:lineSpacingExtra="@dimen/distance_10"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/blue1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/distance_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_56"
            android:layout_marginTop="@dimen/distance_32"
            android:text="@string/registration_buy"
            android:drawableLeft="@drawable/gwc"
            android:drawablePadding="@dimen/distance_10"/>
        <View
            android:background="@color/gray16"
            style="@style/setting_splitline"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/blank9"
            android:gravity="center"
            android:id="@+id/tv_empty_msg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_registration_buy"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_day"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/arrow_blue"/>
            <View
                android:id="@+id/line_day"
                android:background="@color/gray16"
                android:visibility="gone"
                style="@style/setting_splitline"/>
            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_week"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/arrow_blue"/>
            <View
                android:id="@+id/line_week"
                android:background="@color/gray16"
                android:visibility="gone"
                style="@style/setting_splitline"/>
            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_month"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/arrow_blue"/>
            <View
                android:id="@+id/line_month"
                android:background="@color/gray16"
                android:visibility="gone"
                style="@style/setting_splitline"/>
            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_permanent_card"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/arrow_blue"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

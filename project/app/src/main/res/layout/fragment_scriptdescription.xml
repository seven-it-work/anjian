<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:orientation="vertical"
        android:id="@+id/scrollview_scriptdescription"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/blue_text"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/description_description"
                android:drawableLeft="@drawable/ic_script_description"
                android:drawablePadding="10dp"/>
            <View
                android:background="@color/gray_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/gray_text"
                android:id="@+id/tv_description"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/scriptrtd_nortd"
                android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
    <WebView
        android:id="@+id/webview_scriptdescription"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

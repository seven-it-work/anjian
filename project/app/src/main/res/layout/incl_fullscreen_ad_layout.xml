<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_splash_ad_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="@dimen/distance_15"
        android:id="@+id/tv_splash_ad_mark"
        android:background="@drawable/bg_ad_source_mark"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_marginRight="@dimen/distance_10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/tv_close_ad"
        android:background="@drawable/img_ad_countdown"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_marginRight="@dimen/distance_10"
        android:text="@string/splash_close_ad"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>

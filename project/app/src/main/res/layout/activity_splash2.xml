<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_spread_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_splash_bg_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_splash_logo"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:id="@+id/rl_splash_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/text_sp14"
            android:textColor="@color/blank7"
            android:gravity="center"
            android:id="@+id/id_tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_15"
            android:text="@string/server_authenticating"/>
        <com.cyjh.elfin.p085ui.view.CircleDotLinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/id_ll_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:layout_below="@+id/id_tv_msg"/>
    </RelativeLayout>
    <include
        android:id="@+id/id_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/incl_fullscreen_ad_layout"/>
    <FrameLayout
        android:id="@+id/flSplashAd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
